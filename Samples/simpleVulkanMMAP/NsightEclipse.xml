  <name>simpleVulkanMMAP</name>
  <cflags>
    <flag>--std=c++11</flag>
  </cflags>
  <cuda_api_list>
    <driver>cuDeviceGetAttribute</driver>
    <driver>cuMemAddressReserve</driver>
    <driver>cuMemCreate</driver>
