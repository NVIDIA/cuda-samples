<entry>
  <name>simpleGLES_screen</name>
  <cflags>
    <flag>-DUSE_CUDAINTEROP</flag>
    <flag>-DGRAPHICS_SETUP_EGL</flag>
    <flag>-DUSE_GLES</flag>
